
@{
  ViewBag.Title = "Chart";
}


<div class="ibox-content">
  <div class="flot-chart">
    <div class="flot-chart-content" id="flot-line-chart"></div>
  </div>
</div>

<!-- Flot -->
<script src="~/Scripts/plugins/flot/jquery.flot.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.tooltip.min.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.resize.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.pie.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.time.js"></script>

<script type="text/javascript">

  //Line
  $(function () {
    var barOptions = {
      series: {
        lines: {
          show: true,
          lineWidth: 2,
          fill: true,
          fillColor: {
            colors: [{
              opacity: 0.0
            }, {
              opacity: 0.0
            }]
          }
        }
      },
      xaxis: {
        tickDecimals: 0
      },
      colors: ["#1ab394"],
      grid: {
        color: "#999999",
        hoverable: true,
        clickable: true,
        tickColor: "#D4D4D4",
        borderWidth: 0
      },
      legend: {
        show: false
      },
      tooltip: true,
      tooltipOpts: {
        content: "x: %x, y: %y"
      }
    };
    var barData = {
      label: "bar",
      data: [
        [1, 340],
        [2, 25],
        [3, 19],
        [4, 34],
        [5, 32],
        [6, 44],
        [7, 340],
        [8, 25],
        [9, 19],
        [10, 34],
        [21, 320],
        [22, 44]
      ]
    };
    $.plot($("#flot-line-chart"), [barData], barOptions);

  });
</script>

