
@{
  ViewBag.Title = "CircumRecord |Fit";
}
@model Fit.DTO.BodyCircumferenceDTO

<div class="row">
  <div class="col-sm-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <form class="m-t" role="form" method="post" action="/BodyCircumference/Record">
          <input type="hidden" name="id" value="@Model.ID" />
          <input type="hidden" name="userId" value="@Model.UserID" />
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>体重</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="weight" value="@Model.Weight" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">kg</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>上臂围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="upperArm" value="@Model.UpperArm" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>小臂围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="lowerArm" value="@Model.LowerArm" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>胸围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="chest" value="@Model.Chest" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>腰围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="waist" value="@Model.Waist" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>臀围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="hip" value="@Model.Hip" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>大腿围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="upperLeg" value="@Model.UpperLeg" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 form-group">
              <label>小腿围</label>
              <div class="input-group m-b">
                <input type="text" class="form-control" name="lowerLeg" value="@Model.LowerLeg" pattern='^[0-9]+([.]{1}[0-9])?$' title="只能是整数或一位小数">
                <span class="input-group-addon" id="partialMeasurement">cm</span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8">
              <input id="btnSave" type="submit" class="btn btn-primary block full-width m-b" value="保存">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

