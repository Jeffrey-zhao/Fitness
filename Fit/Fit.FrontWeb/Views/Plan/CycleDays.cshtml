@{
  ViewBag.Title = "CycleDays";
}
@model Fit.DTO.PlanDTO[]
<!-- FooTable -->
<link href="~/Content/plugins/footable/footable.core.css" rel="stylesheet">

<div class="row wrapper border-bottom white-bg  page-heading">
  <div class="col-sm-4">
    <h2>我的计划</h2>
    <ol class="breadcrumb">
      <li>
        <span>健身计划</span>
      </li>
      <li class="active">
        <strong>我的计划</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <a href="~/Plan/SetCycleDays" class="btn btn-primary">重置计划</a>
      &nbsp;
      <a href="~/Plan/CreateSechedule" class="btn btn-primary">生成日程</a>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
            <thead>
              <tr>
                <th>天数</th>
                <th>描述</th>
                <th>操作</th>
                <th data-hide="all">详情</th>
              </tr>
            </thead>
            <tbody>
              @{
                int i = 1;
                foreach (var plan in Model)
                {
                  <tr>
                    <td>@plan.Day</td>
                    <td> @plan.Remark</td>
                    <td><a href="/MotionsInPlan/List?planId=@plan.ID&index=@i&planCount=@ViewBag.PlanCount">当天计划</a> </td>
                    <td >@plan.Detail</td>
                  </tr>
                  i++;
                }
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@section FooterScript{
  <!-- FooTable -->
  <script src="~/Scripts/plugins/footable/footable.all.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.footable').footable();
    });
  </script>
}

