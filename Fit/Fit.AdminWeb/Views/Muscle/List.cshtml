@{
  ViewBag.Title = "MuscleGroup | List";
  ViewBag.Name = "肌肉信息";
}
@model Fit.DTO.MuscleDTO[]

<div class="row wrapper border-bottom white-bg  page-heading">
  <div class="col-sm-4">
    <h2>肌肉信息</h2>
    <ol class="breadcrumb">
      <li>
        <span>健身管理</span>
      </li>
      <li class="active">
        <strong>肌肉信息</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
            <thead>
              <tr>
                <th>名称</th>
                <th>肌群</th>
                <th>描述</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td>@item.Name</td>
                  <td>@item.MuscleGroupName</td>
                  <td>@item.Description</td>
                </tr>
              }
            </tbody>
            <tfoot>
              <tr>
                <td colspan="10" class="footable-visible">
                  @{
                    Fit.Common.PageHelper.TotalCount = ViewBag.TotalCount;
                    Fit.Common.PageHelper.CurrentPage = ViewBag.PageIndex;
                    Fit.Common.PageHelper.HrefStr = "/Muscle/List?pageIndex=";
                  }
                  @Html.Raw(Fit.Common.PageHelper.GetHtmlPager())
                  @{Fit.Common.PageHelper.Reset();}
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>



