@{
  ViewBag.Title = "UserInfo | List";
  ViewBag.Name = "用户信息";
}
@model Fit.DTO.UserInfoDTO[]

<div class="row wrapper border-bottom white-bg  page-heading">
  <div class="col-sm-4">
    <h2>用户信息</h2>
    <ol class="breadcrumb">
      <li>
        <span>系统信息</span>
      </li>
      <li class="active">
        <strong>用户信息</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
            <thead>
              <tr>
                <th>姓名</th>
                <th>邮箱</th>
                <th>注册时间</th>
                <th>是否激活</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td>@item.Name</td>
                  <td>@item.Email</td>
                  <td>@item.CreatedDateTime</td>
                  <td>
                    @{if (item.IsActivated)
                      {
                        <span>已激活</span>
                      }
                      else
                      {
                        <span>未激活</span>
                      }
                    }
                  </td>
                </tr>
                      }
            </tbody>
            <tfoot>
              <tr>
                <td colspan="10" class="footable-visible">
                  @{
                    Fit.Common.PageHelper.TotalCount = ViewBag.TotalCount;
                    Fit.Common.PageHelper.CurrentPage = ViewBag.PageIndex;
                    Fit.Common.PageHelper.HrefStr = "/UserInfo/List?pageIndex=";
                  }
                  @Html.Raw(Fit.Common.PageHelper.GetHtmlPager())
                  @{Fit.Common.PageHelper.Reset();}
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
