
@{
  ViewBag.Title = "Permission | Add";
}

<div class="row">
  <div class="col-sm-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <form class="m-t" role="form" id="formAdd">
          <div class="form-group">
            <label>名称</label>
            <input type="text" class="form-control" name="Name" required="" pattern="^[0-9a-zA-Z.]+" title="只能输入字母，数字和“.”">
          </div>
          <div class="form-group">
            <label>描述</label>
            <input type="text" class="form-control" name="Description">
          </div>
          <input id="btnSave" type="submit" class="btn btn-primary block full-width m-b" value="保存">
        </form>
      </div>
    </div>
  </div>
</div>

@section FooterScript{
  <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
  <script type="text/javascript">
    $(function () {
      var options = {
        success: function (response) {
          execResponse(response);
        },
        url: "/Permission/Add",
        type: "post"
      };

      $("#formAdd").submit(function () {
        $(this).ajaxSubmit(options);
        return false;
      });

      function execResponse(res) {
        if (res.status == "ok") {
          location.href = "/Permission/List";
        } else {
          alert(res.msg);
        }
      }
    })

  </script>
}
